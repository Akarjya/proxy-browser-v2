# Proxy Browser V2 Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME="Proxy Browser V2"
APP_VERSION="2.0.0"
DEBUG=false
SECRET_KEY="change-this-to-a-secure-random-string-in-production"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4
RELOAD=false

# Proxy Configuration (Proxidise Example)
PROXY_PROVIDER="proxidise"
PROXY_USERNAME="KMwYgm4pR4upF6yX"
PROXY_PASSWORD="pMBwu34BjjGr5urD"
PROXY_SERVER="pg.proxi.es:20000"  # HTTP port (SOCKS5 uses 20002)
PROXY_TYPE="http"
PROXY_COUNTRY="USA"
PROXY_STATE="NY"
PROXY_CITY="NewYorkCity"
PROXY_ROTATION_TYPE="sticky"

# Geographic Spoofing Settings
SPOOF_TIMEZONE="America/New_York"
SPOOF_LANGUAGE="en-US"
SPOOF_CURRENCY="USD"
SPOOF_LOCALE="en_US"
SPOOF_COUNTRY_CODE="US"
SPOOF_REGION="NY"
SPOOF_LATITUDE=40.7128
SPOOF_LONGITUDE=-74.0060

# Database Configuration (Optional - for session persistence)
DATABASE_URL="sqlite+aiosqlite:///./proxy_browser.db"
REDIS_URL="redis://localhost:6379/0"

# Browser Settings
BROWSER_POOL_SIZE=10
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# Mobile Settings
MOBILE_DEFAULT_UA="Mozilla/5.0 (iPhone; CPU iPhone OS 16_0 like Mac OS X) AppleWebKit/605.1.15 (KHTML, like Gecko) Version/16.0 Mobile/15E148 Safari/604.1"
MOBILE_VIEWPORT_WIDTH=390
MOBILE_VIEWPORT_HEIGHT=844

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"
LOG_ROTATION="100 MB"
LOG_RETENTION="30 days"

# Security
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_MINUTES=60

# Monitoring (Optional)
SENTRY_DSN=""
ENABLE_METRICS=false
METRICS_PORT=9090
